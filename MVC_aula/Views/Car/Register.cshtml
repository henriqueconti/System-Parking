@{
    ViewBag.Title = "Register Car";
}
<div class="jumbotron">
    <h2>Registrar Novo Carro</h2>

    <form action="/cars/criar" method="post">
        <div class="form-group">
            <label for="name">Nome Proprietário: </label>
            <input type="text" id="nome" name="nome" class="form-control" placeholder="Ex: Adam Smith" maxlength="55" required />
        </div>

        <div class="form-group">
            <label for="placa">Placa: </label>
            <input type="text" style="text-transform:uppercase" id="placa" name="placa" class="form-control" placeholder="Ex: ASM-8930" maxlength="8" required />
        </div>

        <div class="form-group">
            <label for="carro">Carro: </label>
            <input type="text" maxlength="13" style="text-transform:uppercase" placeholder="Ex: CR-V" id="carro" name="carro" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="cor">Cor: </label>
            <select id="cor" name="cor" required>
                <option value="Branco">Branco</option>
                <option value="Preto">Preto</option>
                <option value="Prata">Prata</option>
                <option value="Azul">Azul</option>
                <option value="Vermelho">Vermelho</option>
                <option value="Rosa">Rosa</option>
                <option value="Magenta">Magenta</option>
                <option value="Fosco">Fosco</option>
                <option value="Chumbo">Chumbo</option>
                <option value="Vinho">Vinho</option>
            </select>
        </div>

        <button type="submit" class="btn btn-default">Save Register</button>
    </form>
</div>